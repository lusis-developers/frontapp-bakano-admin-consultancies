# ======================================
# Variables de Entorno - Bakano Admin
# ======================================

# Entorno de Desarrollo
NODE_ENV=development

# Configuración de la API
VITE_API_BASE_URL=https://api.bakano.com
VITE_API_VERSION=v1

# Configuración de la Aplicación
VITE_APP_NAME=Bakano Admin
VITE_APP_DESCRIPTION=Panel de administración para gestión de clientes y negocios
VITE_APP_VERSION=1.0.0

# URLs de Servicios Externos
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Configuración de Autenticación
VITE_AUTH_TOKEN_KEY=access_token
VITE_AUTH_REFRESH_KEY=refresh_token

# Configuración de Almacenamiento
VITE_STORAGE_PREFIX=bakano_admin_

# Configuración de Caché
VITE_CACHE_DURATION=3600000  # 1 hora en milisegundos

# Configuración de Paginación
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Configuración de Uploads
VITE_MAX_FILE_SIZE=5242880  # 5MB en bytes
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Configuración de Tiempo
VITE_TIMEZONE=America/Guayaquil
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss

# Configuración de Moneda
VITE_CURRENCY=USD
VITE_CURRENCY_SYMBOL=$

# Configuración de Notificaciones
VITE_TOAST_DURATION=3000  # 3 segundos
VITE_TOAST_POSITION=top-right

# Configuración de Logs
VITE_LOG_LEVEL=info  # error, warn, info, debug
VITE_ENABLE_CONSOLE=true